<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/title_lyt_root">

    <Button
        android:id="@+id/title_btn_bzf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onBZFClick"
        android:text="@string/bzf" />

    <Button
        android:id="@+id/title_btn_azf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_btn_bzf"
        android:layout_alignStart="@+id/title_btn_bzf"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:onClick="onAZFClick"
        android:text="@string/azf" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/simulator"
        android:id="@+id/title_btn_sim"
        android:layout_below="@+id/title_btn_azf"
        android:layout_alignStart="@+id/title_btn_bzf"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:onClick="onSimulatorClick" />

    <Button
        android:id="@+id/title_btn_statistics"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_btn_sim"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onStatisticsClick"
        android:text="@string/statistics" />

    <Button
        android:id="@+id/title_btn_settings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_btn_statistics"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onSettingsClick"
        android:text="@string/settings" />

    <Button
        android:id="@+id/title_btn_feedback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_btn_settings"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="onFeedbackClick"
        android:text="@string/feedback" />

</RelativeLayout>