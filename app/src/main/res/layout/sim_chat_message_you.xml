<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="message" type="java.lang.String" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/icon_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/headset"
        app:layout_constraintBottom_toBottomOf="@id/txt_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:contentDescription="@string/sim_lbl_you" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@{message}"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bubble_you"
        android:layout_gravity="end|center_vertical"

        android:maxWidth="220dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:textColor="?colorSurface"

        app:layout_constraintEnd_toStartOf="@id/icon_message"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>