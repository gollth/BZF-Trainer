<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="de.tgoll.projects.bzf.StatisticsFragment">

    <TextView
        android:id="@+id/st_lbl_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics_history" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/st_chart_history"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/st_lbl_history" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/st_chart_history"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/st_lbl_answers_bzf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistics_bzf"
                android:textAlignment="center" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/st_chart_answers_bzf"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/st_lbl_answers_azf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/statistics_azf"
                android:textAlignment="center" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/st_chart_answers_azf"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
